{
    "compilerOptions": {
      "allowJs": true,
      "outDir": "./dist",
      "target": "es5",
      "module": "es2020",
      "jsx": "react",
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "baseUrl": "src",
      "esModuleInterop": true,
      "lib": ["dom", "esnext"],
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }